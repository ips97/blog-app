{{#each erros}}
    <p class="alert alert-danger">{{texto}}</p>
{{else}}

{{/each}}



<section class="card">
    <section class="card-body">
    <form action="/admin/postagens/nova" method="POST">
    <h4>Nova Postagem:</h4>
        <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="nome" placeholder="Título da Postagem" class="form-control">
        <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="Slug da Postagem" class="form-control">
        <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" class="form-control" placeholder="Descrição">
        <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control" placeholder="Conteúdo"></textarea>
        <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>

        <button type="submit" class="btn btn-success">Criar Postagens</button>
    </form>
    </section>
</section>