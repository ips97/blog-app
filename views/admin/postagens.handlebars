<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>



{{#each postagens}}
    <section class="card">
        <article class="card-body mt-4">
         <h4>{{titulo}}</h4>   
         <p>{{descricao}}</p>
         <small>{{data}}</small> <br>
         <small>{{categoria.nome}}</small><br>
         <a href="/admin/postagens/edit/{{id}}"><button class="btn btn-success mt-3">Editar Postagem</button></a>
         <a href="/admin/postagens/deletar/{{id}}"><button class="btn btn-danger mt-3">Deletar Postagem</button></a>
         </form>
        </article>
    </section>

{{else}}
<h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}
