<h1>{{categoria.nome}}</h1>

{{#each postagens}}
<section class="card  mt-4">
    <article class="card-body">
        
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Data de Publicação: {{data}}</small>
    </article>
</section>
{{else}}
    <h5>Nenhuma Postagem</h5>
{{/each}}